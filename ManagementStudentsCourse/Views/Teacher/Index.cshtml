@using Curso.Models.Dtos
@model List<TeacherDto>

@{
    ViewData["Title"] = "List Teacher's ";
}

<div class=container>
    <div class="mb-5">
        <h1>List Teacher's </h1>
        <a asp-action="NewTeacher" asp-controller="Teacher" class="btn btn-info">Add New Teacher</a>
    </div>
    <div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name Teacher</th>
                    <th>Email</th>
                    <th>CPF</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a asp-controller="Teacher" asp-action="Edit" asp-route-id="@item.Id">@item.Name</a>
                        </td>
                        <td>@item.Email</td>
                        <td>@item.CPF</td>
                        <td>
                            <a asp-controller="Teacher" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                            <a asp-controller="Teacher" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


</div>
