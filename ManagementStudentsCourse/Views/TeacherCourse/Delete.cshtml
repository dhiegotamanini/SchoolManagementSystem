@using Curso.Models.Dtos
@model ManagementTeacherCourseDto

@{
    ViewBag.Title = "Delete Teacher";
    string errorMessage = ViewBag.ErrorMessage;
}

<h1>Delete</h1>

@if (!string.IsNullOrWhiteSpace(errorMessage))
{
    <div class="alert alert-danger" role="alert">
        <h6>@errorMessage</h6>
    </div>
}

<form asp-action="DeleteTeacherCourseConfirmed" asp-antiforgery="false" asp-controller="TeacherCourse" method="post">
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Teacher - @Model.TeacherName</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.TeacherName)
                <input type="hidden" asp-for="Id" />
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TeacherName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Teacher.Email)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Teacher.Email)
            </dd>

            <dt>
                <h6>Course's teacher's associate</h6>
            </dt>
            <dd>
                <ul>
                    @foreach (var course in Model.Courses)
                    {
                        <li>@course.Name</li>
                    }
                </ul>
            </dd>
        </dl>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" asp-controller="TeacherCourse" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</form>