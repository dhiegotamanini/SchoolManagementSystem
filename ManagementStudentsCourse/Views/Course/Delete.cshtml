@using Curso.Models.Dtos
@model CourseDto

@{
    ViewBag.Title = "Delete Course";
}

<h1>Delete</h1>

<form asp-action="DeleteConfirmed" asp-antiforgery="false" asp-controller="Course" method="post">
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Course - @Model.Name</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Description)
                <input type="hidden" asp-for="Id" />
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>
        </dl>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" asp-controller="Course" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</form>